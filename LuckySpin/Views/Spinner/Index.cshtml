@model LuckySpin.Models.Player
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}
<h2>Pick your Number</h2>
<form asp-route="Spinner/Index">
    <fieldset>
        <!-- TODO: Add tag helpers attributes to the <input>, <select> and <span> elements -->
        <label>
            <input asp-for="FirstName" type ="text" />
                <span asp-validation-for="FirstName"></span></label>
        <label>
            <select asp-for="LuckyNumber">
                <option selected disabled>Luck Number</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
            </select>
            <span asp-validation-for="LuckyNumber"></span>
        </label>
    </fieldset>
    <input asp-for="FirstName" type="submit" value="Start the Game" />
</form>